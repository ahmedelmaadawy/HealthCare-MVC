@model List<MedicalRecordViewModel>
@{
    ViewData["Title"] = "Medical Records";
}

<link rel="stylesheet" type="text/css" href="~/css/site.css" />

<h2 id="doch2" class="text-center">Your Medical Records</h2>

<div class="records-container">
    @foreach (var record in Model)
    {
        <div class="record-card">
            <h3>@record.DoctorName</h3>
            <p><strong>Patient:</strong> @record.PatientName</p>
            <p><strong>Date:</strong> @record.AppointmentDate.ToString("MMMM dd, yyyy")</p>
            <p><strong>Description:</strong> @record.Description</p>
            <p><strong>Prescription:</strong> @record.Prescription</p>
            <a asp-action="Details" asp-route-id="@record.Id" class="details-button">View Details</a>
        </div>
    }
</div>
