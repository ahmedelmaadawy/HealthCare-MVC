@model MedicalRecordViewModel
@{
    ViewData["Title"] = "Medical record";
}

<div class="card mx-auto my-4" style="max-width: 600px;">
    <div class="card-header bg-primary text-white">
        Medical Record Details
    </div>
    <div class="card-body">
        <h5 class="card-title text-info">Record ID: @Model.Id</h5>
        <p class="card-text"><strong>Patient Name:</strong> @Model.PatientName</p>
        <p class="card-text"><strong>Doctor Name:</strong> @Model.DoctorName</p>
        <p class="card-text"><strong>Date:</strong> @Model.AppointmentDate.ToString("MMMM dd, yyyy")</p>
        <p class="card-text"><strong>Description:</strong> @Model.Description</p>
        <p class="card-text"><strong>Prescription:</strong> @Model.Prescription</p>
    </div>
    <div class="card-footer text-center">
        @if (User.IsInRole("Patient"))
        {
            <a asp-action="ViewPatientMedicalRecords" asp-route-id="@Model.PatientId" class="btn btn-secondary">Back to List</a>
        }
        else if (User.IsInRole("Doctor"))
        {
            <a asp-action="ViewDoctorMedicalRecords" asp-route-id="@Model.DoctorId" class="btn btn-secondary">Back to List</a>
        }
    </div>
</div>

