@model HealthCare.BusinessLogic.ViewModels.TimeSlotViewModel
@{
    ViewData["Title"] = "AddTimeSlot";
}

<div class="container my-5">
    <div class="card shadow-sm">
        <div class="card-header text-white" style="background-color: #007bff;">
            <h2 class="mb-0">Add Available Time Slot</h2>
        </div>
        <div class="card-body">
            <form asp-action="SaveTimeSlot" method="post">
                <input type="hidden" asp-for="DoctorID" />

                <div class="form-group">
                    <label asp-for="StartTime" class="font-weight-bold">Start Time</label>
                    <input asp-for="StartTime" class="form-control" type="datetime-local" />
                    <span asp-validation-for="StartTime" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="IsAvailable" class="font-weight-bold">Is Available</label>
                    <input asp-for="IsAvailable" class="form-control input2" type="checkbox" />
                </div>

                <button type="submit" class="btn btn-primary">Save</button>
            </form>
        </div>
    </div>
</div>

<style>
    .input2 {
        width: 20px;
        height: 20px;
        margin-left: 10px;
    }

    .container {
        background-color: #f8f9fa; /* Light gray background for container */
        padding: 20px;
        border-radius: 10px;
    }

    .card {
        border-radius: 10px;
        width: 60%;
        margin: auto;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .form-group label {
        color: #495057; /* Dark gray color for labels */
    }

    .form-control {
        border: 2px solid #007bff; /* Blue border for inputs */
        border-radius: 5px;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0056b3; /* Darker blue on hover */
            border-color: #0056b3;
        }
</style>


