@model IEnumerable<DoctorToDisplayVM>

 @{
    ViewData["Title"] = "All Doctors";
} 

<h1 class="mt-3 ">All Doctors</h1>

<form asp-action="Index" method="get">
    <div class="form-group mb-5">
        <input type="text" style="width:300px;" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control d-inline-block" placeholder="Search by Name" />
        <button type="submit" class="ml-3 btn btn-primary d-inline-block">Search</button>

    </div>

</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Specialization)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OfficeAddress)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.Specialization)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContactNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OfficeAddress)
            </td>
            <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn " style="background-color:#a0c4ff">Details</a>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>

                        <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this doctor?');">Delete</button>
                        </form>
                        <a asp-action="AddTimeSlot" asp-route-doctorId="@item.Id" class="btn btn-success">Add Time Slot</a>

                    }
                   
            </td>
        </tr>
}
    </tbody>
</table>
<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f5f8fc;
        color: #333;
    }

    h1 {
        color: #3b73af;
        text-align: center;
        margin-bottom: 40px;
    }

    .form-group input[type="text"] {
        border: 2px solid #3b73af;
        border-radius: 5px;
    }

    .btn-primary {
        background-color: #3b73af;
        border-color: #3b73af;
        color: #fff;
        border-radius: 5px;
        padding: 8px 20px;
    }

        .btn-primary:hover {
            background-color: #2f5f90;
            border-color: #2f5f90;
        }

    .btn-warning {
        background-color: #ffca28;
        border-color: #ffb300;
        color: #fff;
        border-radius: 5px;
        padding: 8px 20px;
    }

    .btn-danger {
        background-color: #e53935;
        border-color: #d32f2f;
        color: #fff;
        border-radius: 5px;
        padding: 8px 20px;
    }

    .btn-success {
        background-color: #43a047;
        border-color: #388e3c;
        color: #fff;
        border-radius: 5px;
        padding: 8px 20px;
    }

    table.table {
        width: 100%;
        background-color: #fff;
        border-collapse: collapse;
        margin-bottom: 20px;
    }

        table.table th {
            background-color: #3b73af;
            color: white;
            text-align: left;
            padding: 15px;
        }

        table.table td {
            border-bottom: 1px solid #ddd;
            padding: 15px;
        }

        table.table tr:hover {
            background-color: #f1f1f1;
        }

    a {
        text-decoration: none;
    }

        a:hover {
            text-decoration: underline;
        }
</style>
