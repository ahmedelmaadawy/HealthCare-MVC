@model IEnumerable<HealthCare.Presentaion.ViewModels.DoctorToDisplayVM>

@{
    ViewData["Title"] = "Doctors Index";
}

<div class="container my-5">
    <h1 class="text-center mb-4">Doctors</h1>

    <form asp-action="Index" method="get" class="mb-4">
        <div class="form-row">
            <div class="col-md-6">
                <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" style="width:180px;" class="form-control" placeholder="Search by Name" />
            </div>
            <div class="col-md-3">
                <button type="submit" class="btn btn-primary btn-block mt-2" style="width:180px;">Search</button>
            </div>
            <div class="col-md-3 text-right">
                <a asp-action="Create" class="btn btn-success btn-block mt-2" style="width:180px;">Create New Doctor</a>
            </div>
        </div>
    </form>

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-hover">
                <thead class="thead-light">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.First().FullName)</th>
                        <th>@Html.DisplayNameFor(model => model.First().Specialization)</th>
                        <th>@Html.DisplayNameFor(model => model.First().ContactNumber)</th>
                        <th>@Html.DisplayNameFor(model => model.First().OfficeAddress)</th>
                        <th class="text-right">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.FullName)</td>
                            <td>@Html.DisplayFor(modelItem => item.Specialization)</td>
                            <td>@Html.DisplayFor(modelItem => item.ContactNumber)</td>
                            <td>@Html.DisplayFor(modelItem => item.OfficeAddress)</td>
                            <td class="text-right">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-info">Edit</a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-secondary">Details</a>
                                <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this doctor?');">Delete</button>
                                </form>
                                <a asp-action="AddTimeSlot" asp-route-doctorId="@item.Id" class="btn btn-sm btn-warning">Add Time Slot</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
